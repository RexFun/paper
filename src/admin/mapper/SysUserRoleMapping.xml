<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">   
  
<mapper namespace="admin.entity.SysUserRoleMapping">
      <!-- 自动生成id策略 -->
    <insert id="add" parameterType="admin.entity.SysUserRoleMapping" useGeneratedKeys="true" keyProperty="id">  
       	insert into sys_user_role_mapping(tc_sys_user_id, tc_sys_role_id) values (#{m.tc_sys_user_id}, #{m.tc_sys_role_id})  
    </insert>  
	
	<delete id="del" parameterType="admin.entity.SysUserRoleMapping">
		delete from sys_user_role_mapping where id = #{id}
	</delete>
	
	<delete id="delByUserId" parameterType="admin.entity.SysUserRoleMapping">
		delete from sys_user_role_mapping where tc_sys_user_id = #{tc_sys_user_id}
	</delete>
	
	<delete id="delByRoleId" parameterType="admin.entity.SysUserRoleMapping">
		delete from sys_user_role_mapping where tc_sys_role_id = #{tc_sys_role_id}
	</delete>
	
	<update id="upd" parameterType="admin.entity.SysUserRoleMapping">
		update sys_user_role_mapping set
		  	   tc_sys_user_id = #{m.tc_sys_user_id},
		  	   tc_sys_role_id = #{m.tc_sys_role_id}
		 where id = #{m.id}
	</update>
  	
	<resultMap type="admin.entity.SysUserRoleMapping" id="result">
		<id property="m.id" column="id"/>
		<result property="m.tc_sys_user_id" column="tc_sys_user_id"/>
		<result property="m.tc_sys_role_id" column="tc_sys_role_id"/>
	</resultMap>
  	
	<sql id="columns">
		ID, TC_SYS_USER_ID, TC_SYS_ROLE_ID
	</sql>
	
	<sql id="page">
		<if test="offset!=null and limit!=null"> limit #{offset,javaType=String,jdbcType=NUMERIC}, #{limit,javaType=String,jdbcType=NUMERIC} </if>
	</sql>
	
	<sql id="dynamicWhere">
		<where>
			<if test="tc_sys_user_id != null and tc_sys_user_id != ''"> and TC_SYS_USER_ID = #{tc_sys_user_id} </if>
			<if test="tc_sys_role_id != null and tc_sys_role_id != ''"> and TC_SYS_ROLE_ID = #{tc_sys_role_id} </if>
		</where>
	</sql>
	
	<select id="getRoleIdsByUserId" resultType="String">
		select t.tc_sys_role_ids from 
		(
			select tt.tc_sys_user_id, 
				   group_concat(tt.tc_sys_role_id) as tc_sys_role_ids
			  from sys_user_role_mapping tt 
			 group by tt.tc_sys_user_id
		) t 
		where t.tc_sys_user_id = #{tc_sys_user_id}
	</select>
	
	<select id="getById" resultMap="result">
		select <include refid="columns"/> from sys_user_role_mapping where id = #{id}
	</select>
	
	<select id="get" resultType="list" resultMap="result">
		select <include refid="columns"/> from sys_user_role_mapping
		<include refid="dynamicWhere" /> order by 1
		<include refid="page" />
	</select>
	
	<select id="getCount" resultType="int">
		select count(1) from sys_user_role_mapping
		<include refid="dynamicWhere" />
	</select>
</mapper>  
